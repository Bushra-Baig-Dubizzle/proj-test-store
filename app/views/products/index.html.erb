<h1>All Products</h1>

<% if user_signed_in? %>
  <p>
    <%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
  </p>
<% end %>

<% cache @products do %>
  <ul>
    <% @products.each do |product| %>
      <li>
        ID: <%= product.id %> –
        <%= link_to "Name: #{product.name.presence || '(no name)'}", product_path(product) %> –
        Created: <%= product.created_at.strftime("%Y-%m-%d %H:%M") %>
      </li>
    <% end %>
  </ul>
<% end %>
